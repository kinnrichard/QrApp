<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QrAppMobile.Views.ScanDetailPage"
             xmlns:viewModel="clr-namespace:QrAppMobile.ViewModels">

    <ContentPage.BindingContext>
        <viewModel:ScanDetailPageViewModel />
    </ContentPage.BindingContext>
    
    <StackLayout Padding="30"
                 VerticalOptions="Start">
        <Label Text="Employee ID"
               HorizontalOptions="Center"/>
        <Entry Text="{Binding EmployeeId}" FontSize="50" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
        <Entry Text="{Binding EmployeeName, Mode=TwoWay}" FontSize="50" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
        <Button Text="Get ID" BackgroundColor="#1abc9c" FontAttributes="Bold" FontFamily="Arial" FontSize="Large" TextColor="White" HeightRequest="50" WidthRequest="100" VerticalOptions="Center" CornerRadius="30" Command="{Binding GetId}"/>


    </StackLayout>
</ContentPage>